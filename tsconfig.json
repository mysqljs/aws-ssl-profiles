{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "removeComments": false,
    "listEmittedFiles": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib"
  }
}
